{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "src": "/(.*)",
      "dest": "/src/index.js"
    }
  ],
   "functions": {
    "/src/index.js": {
      "maxDuration": 30 // This function can run for a maximum of 30 seconds
    },
    "src/*.js": {
      "maxDuration": 30 // These functions can run for a maximum of 15 seconds
    }
  }
}

